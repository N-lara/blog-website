<div class="post">
    <div class="card-header">
        <h2 class="post" data-id="{{post.id}}"> {{post.title}}</h2> <span>posted by {{post.user.name}} on {{post.createdAt}}</span>
    </div>
    <div class="card-content">
        <textarea id="post-content" name="post-content" rows="10" cols="70">{{post.content}}</textarea>
    </div>
</div>
<br/>
<button id="delete-btn" data-id="{{post.id}}">delete post</button>
<button id="edit-btn" data-id="{{post.id}}">save changes</button>
<br/>

<h3 class="comments-div">Comments</h3>
{{#each comments as |comment|}}
    <div class="comment">
        <p class="comment-content" data-id="{{comment.id}}"> {{comment.content}}</p>
        <p class="comment-attributes">--posted by {{comment.user.name}} on {{comment.createdAt}}</p>
    </div>
{{/each}}

<script src="/js/dashboard-post.js"></script>